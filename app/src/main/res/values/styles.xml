<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppDarkTheme" parent="BaseDarkTheme" />

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color_light_primary</item>
        <item name="colorPrimaryDark">@color/color_light_status_bar</item>
        <item name="colorAccent">@color/color_light_accent</item>
        <item name="android:windowBackground">@color/color_light_background</item>
        <item name="actionBarTheme">@style/ToolBarTheme</item>
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="BaseDarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/color_light_primary</item>
        <item name="colorPrimaryDark">@color/color_dark_background</item>
        <item name="colorAccent">@color/color_light_accent</item>
        <item name="android:windowBackground">@color/color_dark_background</item>
        <item name="actionBarTheme">@style/ToolBarDarkTheme</item>
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/color_black</item>
        <item name="android:popupBackground">@color/color_light_status_bar</item>
    </style>

    <style name="ToolBarDarkTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/color_white</item>
        <item name="android:popupBackground">@color/color_dark_accent</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="ToolbarFontStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/custom_font</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">@color/color_light_primary</item>
    </style>

    <style name="MaterialButtonStyleBorder" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="strokeColor">@color/color_light_primary</item>
        <item name="android:textColor">@color/color_light_primary</item>
    </style>

    <style name="SheetDialogLight" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SheetDialogLightRtl" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="SheetDialogDark" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/color_dark_toolbar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="SheetDialogDarkRtl" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:navigationBarColor">@color/color_dark_toolbar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/custom_font</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/custom_font</item>
    </style>

    <style name="ShapeAppearance.Image.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/image_corner_radius</item>
    </style>

    <style name="FilterItem">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">7dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="fontFamily">@font/custom_font</item>
        <item name="android:text">@string/drop_down_item_free</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_item_free</item>

    </style>


    <style name="ItemBuy" parent="@style/FilterItem">
        <item name="android:background">@drawable/bg_item_premium</item>
    </style>

    <style name="BaseText">
        <item name="android:fontFamily">@font/sego_ui</item>
    </style>

    <style name="unlock_all"  parent="BaseText">
        <item name="android:textSize"> 37sp </item>
        <item name="android:textColor"> #FFFFFF </item>
    </style>
    <declare-styleable name="ButtonStyle">
        <attr name="corner" format="dimension"/>
        <attr name="press_color" format="reference|color"/>
        <attr name="normal_color" format="reference|color"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="stroke_color" format="reference|color"/>
        <attr name="type">
            <enum name="ok" value="1" />
            <enum name="info" value="2" />
            <enum name="warning" value="3" />
            <enum name="error" value="4" />
        </attr>
    </declare-styleable>

</resources>